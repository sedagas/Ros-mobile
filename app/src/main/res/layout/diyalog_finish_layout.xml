        android:layout_marginRight="8dp"
        android:background="@color/colorPrimary"
        android:text="pay"
        android:padding="10dp"
        android:textColor="@color/white"
        app:layout_constraintCircleRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
